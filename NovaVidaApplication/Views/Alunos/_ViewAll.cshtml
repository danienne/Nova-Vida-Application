@model IEnumerable<NovaVidaApplication.Models.Aluno>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Nome do Aluno
            </th>
            <th>
                Valor da Mensalidade
            </th>
            <th>
                Data do Vencimento
            </th>
            <th>
                Nome do Professor
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            using (Html.BeginForm("DeletarAluno", "Alunos", new { id = item.AlunoId }))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        R$ @Html.DisplayFor(modelItem => item.Mensalidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataVencimentoMensalidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Professor.Nome)
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modalDeletarAluno">Deletar</button>
                        <div class="modal" tabindex="-1" role="dialog" id="modalDeletarAluno">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Deletar Aluno</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Tem certeza que deseja deletar o aluno : <span><b>@item.Nome</b></span>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                                        <button type="submit" class="btn btn-success">Confirmar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>